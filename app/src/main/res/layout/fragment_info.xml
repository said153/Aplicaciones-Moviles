<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="癸 Elementos de Informaci贸n"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Los elementos informativos muestran datos al usuario. TextView para texto, ImageView para im谩genes y ProgressBar para indicar progreso de operaciones."
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/textSecondary" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_dynamic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Texto actual: Texto inicial compartido"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimary"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/cardBackground"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/iv_clickable"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_click_me"
                    android:contentDescription="Imagen Clickeable"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Toca la imagen para un activity diferente"
                    android:textAlignment="center"
                    android:textColor="@color/textColorPrimary" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorAccent"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Progreso: 0%"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/pb_circular"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progressTint="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_global_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estado: Pendiente"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Controles"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btn_start_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="讹 Iniciar Progreso"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btn_stop_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="革 Detener Progreso"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorAccent" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" "
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tv_update_counter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actualizaciones: 0"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/btn_update_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Actualizar Informaci贸n"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorAccent" />

                <Button
                    android:id="@+id/btn_go_to_new_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Abrir Nueva Actividad"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/colorAccent" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Esta pantalla muestra informaci贸n en tiempo real y se conecta con el estado global de la aplicaci贸n"
            android:textSize="14sp"
            android:textColor="@color/textSecondary"
            android:textAlignment="center"
            android:textStyle="italic"
            android:background="@color/backgroundLight"
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>